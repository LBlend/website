---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const locale = Astro.locals.locale;
---

<time datetime={date.toISOString()} title={date.toLocaleDateString(locale)}>
  {
    date.toLocaleDateString(locale, {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

---
import { Image } from "astro:assets";

import Cv from "@assets/icons/cv.svg";
import Email from "@assets/icons/email.svg";
import Github from "@assets/icons/github.svg";
import Me from "@assets/images/me.jpg";
import { useTranslations } from "src/i18n";

const locale = Astro.locals.locale;
const t = useTranslations(locale);
---

<style>
  h1 {
    background: linear-gradient(90deg, rgb(34, 181, 254) 0%, rgb(255, 186, 214) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

<section class="flex flex-col items-center justify-center">
  <div class="flex flex-col items-center justify-center gap-2 justify-self-center">
    <p class="fade-in-section text-center font-extralight text-gray-400">2000 - 04 - 30</p>
    <Image
      src={Me}
      alt="Leander Furumo"
      width={256}
      height={256}
      loading="eager"
      class="fade-in-section mb-4 rounded-full border-4 border-white"
    />
    <h1 class="fade-in-section text-center text-6xl font-bold">Leander Furumo</h1>
    <p class="fade-in-section font-nunito text-center font-extralight text-gray-400">
      {t("hero.coordinates")}
    </p>
    <div class="fade-in-section mt-10 mb-4 flex justify-center gap-4">
      <a href="mailto:leander@furumo.eu" class="icon-link">
        <Email class="size-10" />
      </a>
      <a href="https://github.com/LBlend" class="icon-link">
        <Github class="size-10" />
      </a>
      <a href="https://cv.furumo.eu" class="icon-link">
        <Cv class="size-10" />
      </a>
    </div>
  </div>
</section>

<section class="flex flex-col gap-4">
  <h2 class="text-4xl font-bold">{t("visitedPlaces.title")}</h2>
  <p>
    {t("visitedPlaces.description")}
  </p>
  <article id="chartdiv" class="h-[550px] w-full"></article>
  <a href="https://my.flightradar24.com/LBlend" class="mx-auto w-fit lg:mx-0"
    ><Image
      src="https://banners-my.flightradar24.com/LBlend.png"
      alt="My Flightdiary.net profile"
      width="320"
      height="70"
    /></a
  >
</section>


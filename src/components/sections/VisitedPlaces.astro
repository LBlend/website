    projection: "geoNaturalEarth1",
    theme: "dark-yellow",
    water: 1,
    graticule: 0,
    names: 0,
    duration: 0,
    slider: 1,
    autoplay: 0,
    autozoom: "none",
    data: [
      {
        places: [
          "DK",
          "SE",
          "ES",
          "GI",
          "FR",
          "TH",
